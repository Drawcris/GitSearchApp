<Window x:Class="GitSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitSearch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Nazwa konta:" Margin="0,0,5,0" VerticalAlignment="Center" />
            <TextBox x:Name="accountNameTextBox" Width="150" VerticalAlignment="Center"  KeyDown="Enter_Click"/>
            <Button Content="Szukaj" Click="Button_Click" Margin="5,0,0,0" />
            <Button Content="Wyjdź" Click="Button_Close" Margin="7,0,0,0"/>
        </StackPanel>

        <Grid Margin="10,10,10,48" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Image x:Name="avatarImage" Source="{Binding ImageSource}" HorizontalAlignment="Left" Stretch="Uniform" VerticalAlignment="Top" />
            <ListBox x:Name="wynikListBox" Margin="0,10,10,10" Background="#FFAEBCF1" MinHeight="200" Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
