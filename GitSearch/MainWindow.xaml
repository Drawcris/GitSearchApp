<Window x:Class="GitSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitSearch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Nazwa konta:" Margin="0,0,5,0" VerticalAlignment="Center" />
            <TextBox x:Name="accountNameTextBox" Width="150" VerticalAlignment="Center" />
            <Button Content="Szukaj" Click="Button_Click" Margin="5,0,0,0" />
        </StackPanel>
        <ListBox x:Name="wynikListBox" Margin="10,39,244,10" Grid.Row="1" Background="#FFAEBCF1" />
        
        
    </Grid>
</Window>
